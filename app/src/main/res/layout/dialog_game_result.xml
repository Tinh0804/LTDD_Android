<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivResultIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mascot"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoàn thành!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A202C"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <!-- XP Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kinh nghiệm nhận được"
                android:textColor="#718096"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvXpEarned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50 XP"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#805AD5"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúc mừng! Bạn đã mở khóa bài học mới."
        android:textSize="16sp"
        android:textColor="#4A5568"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"/>

    <!-- Button về trang chủ -->
    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Về trang chủ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button_primary"
        android:elevation="4dp"/>

</LinearLayout>
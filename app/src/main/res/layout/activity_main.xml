            <!-- Fire Streak -->
            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="ðŸ”¥ 4"
                android:textColor="@android:color/white"
                android:textSize="16sp"

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nghe và đọc lại theo phát âm"
            android:textColor="#1A202C"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Progress Bar Container -->
        <LinearLayout
            android:id="@+id/llProgressContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">


        </LinearLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMainContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llProgressContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu 1/10"
                    android:textColor="#4A5568"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <!-- Character Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/ivCharacter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/character_placeholder" />
                </androidx.cardview.widget.CardView>

                <!-- Sentence Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Audio Controls -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <ImageButton
                                android:id="@+id/btnPlayNormal"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_audio"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp"
                                android:background="@color/white"/>

                            <ImageButton
                                android:id="@+id/btnPlaySlow"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_play_slow"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:background="@color/white"/>
                        </LinearLayout>

                        <!-- Sentence Text -->
                        <TextView
                            android:id="@+id/tvSentence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loading sentence..."
                            android:textColor="#2D3748"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:lineSpacingExtra="4dp" />

                        <!-- Mini Progress Dots -->
                        <LinearLayout
                            android:id="@+id/llProgressDots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvMainContent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Score Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="16dp">

                    <!-- Overall Score -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Điểm tổng"
                                android:textColor="#718096"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvOverallScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85"
                                android:textColor="#4299E1"
                                android:textSize="32sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Accuracy Score -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Độ chính xác"
                                android:textColor="#718096"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvAccuracyScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90%"
                                android:textColor="#48BB78"
                                android:textSize="32sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Feedback Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/tvFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Good pronunciation! Keep it up!"
                        android:textColor="#4A5568"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:background="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recording Section -->
        <LinearLayout
            android:id="@+id/llRecordingSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvResult">

            <!-- Mic Button Container with Pulse Effect -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <!-- Pulse Ring (visible when recording) -->
                <View
                    android:id="@+id/vPulseRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- Mic Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnMic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_microphone"
                            android:scaleType="centerInside"
                            android:padding="24dp" />

                        <!-- Loading Spinner -->
                        <ProgressBar
                            android:id="@+id/pbLoading"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:indeterminateTint="#805AD5" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/tvMicStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nhấn giữ để nói"
                android:textColor="#718096"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llRecordingSection">

            <Button
                android:id="@+id/btnRetry"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Thử lại"
                android:textColor="#4A5568"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Tiếp tục"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
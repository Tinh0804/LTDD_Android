<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FAFAFA"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="40dp"
            android:paddingBottom="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter OTP Code"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Chúng tôi đã gửi mã OTP 6 chữ số đến email của bạn.\nVui lòng nhập mã bên dưới để tiếp tục."
                android:textColor="#666666"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp" />

            <!-- OTP container: MATCH_PARENT + WEIGHT => không bị cắt 2 bên -->
            <LinearLayout
                android:id="@+id/otpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6">

                <EditText
                    android:id="@+id/otp1"
                    style="@style/OtpEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />

                <EditText
                    android:id="@+id/otp2"
                    style="@style/OtpEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />

                <EditText
                    android:id="@+id/otp3"
                    style="@style/OtpEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />

                <EditText
                    android:id="@+id/otp4"
                    style="@style/OtpEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />

                <EditText
                    android:id="@+id/otp5"
                    style="@style/OtpEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />

                <EditText
                    android:id="@+id/otp6"
                    style="@style/OtpEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp" />
            </LinearLayout>

            <!-- Timer -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="You can resend the code in 60 seconds"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- Resend -->
            <TextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Resend code"
                android:textColor="#5856D6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

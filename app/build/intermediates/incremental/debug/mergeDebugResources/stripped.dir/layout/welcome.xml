<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity">

    <View
        android:id="@+id/top_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6A5AF9"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bubbletext"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/textbubble"
        app:layout_constraintBottom_toTopOf="@id/apple_mascot"
        app:layout_constraintStart_toEndOf="@id/apple_mascot"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="-60dp"
        android:layout_marginEnd="24dp"/>


    <ImageView
        android:id="@+id/apple_mascot"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/apple_welcome"
        app:layout_constraintBottom_toBottomOf="@id/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_background"
        app:layout_constraintVertical_bias="0.7" />

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to AppleTalk"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn languages whenever and wherever you want. It's all in your hands!"
            android:textSize="14sp"
            android:textColor="#8A8A8A"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp" />

        <ProgressBar
            android:id="@+id/prg"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/custom_progress2"
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:progressTint="#5150FF"
            android:progress="50" />

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get Started"
            android:backgroundTint="#6A5AF9"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            app:cornerRadius="38dp" />

        <Button
            android:id="@+id/login_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="I Already Have an Account"
            android:backgroundTint="#F0EEFF"
            android:textColor="#6A5AF9"
            android:layout_marginTop="12dp"
            app:cornerRadius="38dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
